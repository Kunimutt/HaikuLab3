@model HaikuLab3.Models.ViewModelUserHaiku

 

@{
    ViewData["Title"] = "ShowMyPage";
}

 

<h1 class="my-5">Min sida</h1>

 


<div class="row">
    <div class="col col-lg-4">
        <div style="width: 300px; height:300px; overflow: hidden; border: 1px solid #e5e5e5;">
            <img alt = "bild" class="img-fluid" src="~/uploads/@Model.userDetail.Us_Photo" />
        </div>
        @Html.ActionLink("Lägg till profilbild", "AddPic", "User")
    </div>
    <div class="col col-lg-8">
        <h5 class="my-5 my-lg-0">Mina uppgifter</h5>
        <hr />
        <table class="d-flex flex-column justify-content-between table">
            @foreach (HaikuLab3.Models.UserDetail UserDetail in Model.UserDetailList)
            {
                <tr>
                    <th>Förnamn</th>
                    <td>@UserDetail.Us_Fname</td>
                    <td></td>
                </tr>
                <tr>
                    <th>Efternamn</th>
                    <td>@UserDetail.Us_Lname</td>
                    <td></td>
                </tr>
                <tr>
                    <th>Alias</th>
                    <td>@UserDetail.Us_Alias</td>
                    <td></td>
                </tr>
                <tr>
                    <th>Födelseår</th>
                    <td>@UserDetail.Us_Age</td>
                    <td></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@UserDetail.Us_Email</td>
                    <td>@Html.ActionLink("Ändra email", "EditEmail", "User" /*new {id = Model.UserDetailList}*/)</td>
                </tr>
                <tr>
                    <th>Beskrivning</th>
                    <td>@UserDetail.Us_Description</td>
                    <td>@Html.ActionLink("Uppdatera beskrivning", "AddDescription", "User")</td>
                </tr>
            }
        </table>
        
    <div class="d-flex mt-5 mb-3">
        <a asp-action="DeleteUser" class="btn btn-outline-danger btn-sm" onclick="return confirm ('Är du säker på att du vill radera din användare? OBS! Åtgärden är permanent.');">Ta bort användare</a>
    </div>
        
    </div>
</div>

 

<hr />
<div class="d-flex justify-content-between align-items-center my-5">
    <h5>Mina haikus</h5>
    <a asp-area="" asp-controller="Haiku" asp-action="InsertHaikuForm" class="btn btn-primary">Lägg till haiku</a>

 

</div>
<table class="table">
    <tr>
        <th>Titel</th>
        <th>Genre</th>
        <th></th>
    </tr>

 

    @foreach (HaikuLab3.Models.HaikuListDetail HaikuListDetail in Model.HaikuListDetailList)
    {
        <tr>
            <td>@HaikuListDetail.Hl_Title</td>
            <td>@HaikuListDetail.Hl_Genre</td>
            <td>
                @Html.ActionLink("Visa haiku", "Details", "Start", new { id = HaikuListDetail.Hl_Title })
            </td>
        </tr>
    }

 

</table>
 