@model HaikuLab3.Models.ViewModelUserHaiku

@{
    ViewData["Title"] = "ShowMyPage";
}

<h1>Min sida</h1>

<h4>Hej @TempData["Test"]!</h4>

<div>
    <h5>Mina uppgifter</h5>
    <hr />
    <dl class="row">
        @foreach(HaikuLab3.Models.UserDetail UserDetail in Model.UserDetailList)
        {
            <dt class = "col-sm-2">
            Förnamn
        </dt>
        <dd class = "col-sm-10">
            @UserDetail.Us_Fname
        </dd>
          <dt class = "col-sm-2">
            Efternamn
        </dt>
        <dd class = "col-sm-10">
            @UserDetail.Us_Lname
        </dd>
          <dt class = "col-sm-2">
            Alias
        </dt>
        <dd class = "col-sm-10">
            @UserDetail.Us_Alias
        </dd>
          <dt class = "col-sm-2">
            Födelseår
        </dt>
        <dd class = "col-sm-10">
            @UserDetail.Us_Age
        </dd>
          <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @UserDetail.Us_Email
        </dd>
               }

     </dl>
</div>

<div>
    @Html.ActionLink("Ändra email", "EditEmail", "User" /*new {id = Model.UserDetailList}*/) |
    @Html.ActionLink("Ta bort användare", "DeleteUser", "User")
    
</div>
<br />
<br />
<h5>Mina haikus</h5>
<table class = "table">
    <tr>
        <th>Titel</th>
        <th>Genre</th>
    </tr>

    @foreach (HaikuLab3.Models.HaikuListDetail HaikuListDetail in Model.HaikuListDetailList)
    {
        <tr>
            <td>@HaikuListDetail.Hl_Title</td>
            <td>@HaikuListDetail.Hl_Genre</td>
            <td>
                @Html.ActionLink("Visa haiku", "Details", "Home", new { id= HaikuListDetail.Hl_Title })
            </td>
        </tr>
    }

</table>
