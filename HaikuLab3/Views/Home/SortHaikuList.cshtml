@model HaikuLab3.Models.ViewModelHaikuList

@{
    ViewData["Title"] = "SearchHaikuList";
}

<h1>Visa alla Haiku</h1>


<div class="row">
    <div class= "form-group col-md-4">
        <form asp-action= "SortHaikuList">

            <div>
                <p>Sortering</p>
                <label for="1">På</label>
                <input type = "radio" id="1" value ="ASC" name="sort" />
                <label for="2">Av</label>
                <input type = "radio" id="2" value ="DESC" name="sort" />
            </div>

            <div class= "form-group">
                <input type = "submit" value ="Sortera" class ="btn-default" />
            </div>
            
        </form>
    </div>
</div>

<p>Din sortering @ViewData["SortHaiku"]</p>

<h2>Lista med haikus</h2>

<table class = "table">
    <tr>
        <th>Titel</th>
        <th>Författare</th>
        <th>Genre</th>
    </tr>

    @foreach (HaikuLab3.Models.HaikuListDetail HaikuListDetail in Model.HaikuListDetailList)
    {
        <tr>
            <td>@HaikuListDetail.Hl_Title</td>
            <td>@HaikuListDetail.Hl_Author</td>
            <td>@HaikuListDetail.Hl_Genre</td>
        </tr>
    }

</table>


