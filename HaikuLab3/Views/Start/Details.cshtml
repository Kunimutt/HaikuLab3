@model HaikuLab3.Models.HaikuDetail



@{
    ViewData["Title"] = "Details";
}

@section MetaTags
{
    <meta name = "description" content = "Haiku 2.0 är ett community för alla som älskar Haikus. Här kan du skriva egna haikus men också läsa och betygsätta andras" />
    <meta name = "title" content = "@Model.Ha_Title"/>
    <meta name = "language" content = "sv"/>
    <meta name = "type" content = "website"/>
    <meta name = "keywords" content = "Haiku,@Model.Ha_Alias,@Model.Ha_Genre,dikter"/>
    <meta name = "creator" content = "@Model.Ha_Alias"/>
    <meta name = "publisher" content = "M. Haldorson, B. Salminen"/>


}
@*<head>
    <meta property = "og:type" content = "website" />
</head>*@

<body>
<h1>Visa haiku</h1>
<h5>@ViewData["detailtest"]</h5>



<div>

<hr />
<dl class="row">
     <dt class="col-sm-2">
            Titel
           
    </dt    >
        <dd class="col-sm-10">
            @Model.Ha_Title
    </dd    >
        <dt class="col-sm-2">
            Text



       </dt>
        <dd class="col-sm-10">
            @Model.Ha_Content
        </dd>
        <dt class="col-sm-2">
            Författare



       </dt>
        <dd class="col-sm-10">
            @Model.Ha_Alias
        </dd>
        <dt class="col-sm-2">
            Genre



       </dt>
        <dd class="col-sm-10">
            @Model.Ha_Genre
        </dd>
    
</dl>
</div>


<div> 
    <a asp-action="Home">Till startsidan</a>
</div>

</body>