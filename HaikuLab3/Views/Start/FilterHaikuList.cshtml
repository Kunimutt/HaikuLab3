@model HaikuLab3.Models.ViewModelHaikuList

@{
    ViewData["Title"] = "FilterHaikuList";
}

<h1>Visa alla Haiku</h1>

<div class="row">
    <div class= "form-group col-md-4">
        <form asp-action= "FilterHaikuList">
            <div class= "form-group">
                <select class = "form-control" id="Ge_Name" name="Ge_Name" class="form-select">
                    @foreach (HaikuLab3.Models.GenreDetail GenreDetail in Model.GenreDetailList)
                    {
                        <option value = "@GenreDetail.Ge_Name"> @GenreDetail.Ge_Name </option>
                       
                    }
                </select>
                
            </div>
            
            <div class= "form-group">
                <input type = "submit" value ="Filtrera" class ="btn-default" />
            </div>
            
        </form>
        <p>Vald genre är: @ViewData["TestViewData"]</p>
    </div>
</div>




<h2>Lista med haikus</h2>

<table class = "table">
    <tr>
        <th>Titel</th>
        <th>Författare</th>
        <th>Genre</th>
    </tr>

    @foreach (HaikuLab3.Models.HaikuListDetail HaikuListDetail in Model.HaikuListDetailList)
    {
        <tr>
            <td>@HaikuListDetail.Hl_Title</td>
            <td>@HaikuListDetail.Hl_Author</td>
            <td>@HaikuListDetail.Hl_Genre</td>
            <td>
                @Html.ActionLink("Visa haiku", "Details", new { id= HaikuListDetail.Hl_Title })
            </td>
        </tr>
    }

</table>
